generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  password  String
  firstName String
  lastName  String
  phone     String
  image     String
  role      Role   @default(driver)
}

enum Role {
  admin
  office
  driver
}
